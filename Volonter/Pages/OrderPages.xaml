<Page x:Class="Volonter.Pages.OrderPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Volonter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPages">

    <Grid>
        <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Id, StringFormat=  'Заявка № {0}'}" Width="100" Height="40"></TextBlock>
                <TextBlock Text="{Binding Discription}" Width="200" Height="100" TextWrapping="Wrap"  Margin="0 10 0 0"></TextBlock>
                <Button x:Name="BtEnd" Click="BtEnd_Click" Width="70"  Margin="0 10 0 0">Зарвершить</Button>
                <Button x:Name="BtCansel" Click="BtCansel_Click" Width="70" Margin="0 10 0 0">Отменить</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
