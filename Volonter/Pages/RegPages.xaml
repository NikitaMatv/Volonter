<Page x:Class="Volonter.Pages.RegPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Volonter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPages">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock>Имя</TextBlock>
            <TextBox x:Name="TbName" Text="{Binding Name}" Width="150" MaxLength="30" PreviewTextInput="TbName_PreviewTextInput"></TextBox>
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="TbLogin" Text="{Binding Login}" Width="150" MaxLength="30"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <TextBox x:Name="TbPassword"  Text="{Binding Password}" Width="150" MaxLength="30"></TextBox>
            <Button x:Name="BtRegEnd" Click="BtRegEnd_Click"  Margin="0 10 0 0">Зарегестрироваться</Button>
        </StackPanel>
    </Grid>
</Page>
