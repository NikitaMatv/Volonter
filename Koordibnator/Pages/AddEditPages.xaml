<Page x:Class="Koordibnator.Pages.AddEditPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Koordibnator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPages">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock>Описание</TextBlock>
            <TextBox x:Name="TbDiscription" Width="250" Height="150" Text="{Binding Discription}" TextWrapping="Wrap" MaxLength="250" ></TextBox>
            <Button x:Name="BtAdd" Click="BtAdd_Click"  Margin="0 10 0 0">Сохранить</Button>
            <Button x:Name="BtCansel" Click="BtCansel_Click"  Margin="0 10 0 0">Отменить</Button>
        </StackPanel>
    </Grid>
</Page>
