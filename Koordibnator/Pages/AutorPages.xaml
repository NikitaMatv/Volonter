<Page x:Class="Koordibnator.Pages.AutorPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Koordibnator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorPages">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="TbLogin" Width="150" MaxLength="30"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="PbPassword" Width="150" MaxLength="30"></PasswordBox>
            <Button x:Name="BtAutor" Click="BtAutor_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
